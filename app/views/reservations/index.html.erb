<% content_for :jumbotron do %>
  <%= render partial: 'shared/jumbotron', locals: {
    titles: {
      title: 'Reservations'
    },
    add_link_name: 'See Properties',
    add_link_path: properties_path
  } %>
<% end %>
<% @reservations.each do |reservation| %>
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <%= link_to reservation.property do %>
          <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" 
          preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: <%= reservation.property.title %>">
          <title><%= reservation.property.title %></title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em"><%= reservation.property.title %></text></svg>
        <% end %>
        <div class="card-body">
          <p class="card-text"><b>Reservation</b></p>
          <p>Date: <%= reservation.reservation_date.strftime('%Y-%m-%d') %></p>
          <p>Number of nights: <%= reservation.number_of_nights %></p>
          <p>Number of guest: <%= reservation.number_of_guest %></p>
          <p>Approved: <%= true?(reservation.approved) %></p>
          <p>Total Price: <%= reservation.total_price %></p>
          <div class="d-flex justify-content-between align-items-center">
            <%= btn_group_reservation reservation, edit_reservation_path(reservation), reservation %>
          </div>
        </div>
      </div>
    </div>
<% end %>